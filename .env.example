# Database (Required)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration (Required)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production-min-32-chars"

# Google OAuth Credentials (Required)
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Paddle Payment Gateway (Required for Production)
# Get these from https://vendors.paddle.com/
PADDLE_API_KEY="your_paddle_api_key_live_xxxx"
PADDLE_ENVIRONMENT="sandbox" # Use "sandbox" for testing, "production" for live
PADDLE_WEBHOOK_SECRET="your_paddle_webhook_secret"

# Public Paddle Configuration (for client-side Paddle.js)
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN="your_paddle_client_side_token"
NEXT_PUBLIC_PADDLE_ENVIRONMENT="sandbox"

# Paddle Price IDs (Set these to your actual price IDs from Paddle dashboard)
PADDLE_PRICE_ID_ONE_TIME="pri_01_one_time_exam"
PADDLE_PRICE_ID_PRO_MONTHLY="pri_01_pro_monthly"
PADDLE_PRICE_ID_PRO_YEARLY="pri_01_pro_yearly"

# Deprecated (kept for migration reference)
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
